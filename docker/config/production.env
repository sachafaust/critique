# Production Environment Configuration
# Copy this file to .env and configure with your actual values

# Logging Configuration
LLM_CRITIQUE_LOG_LEVEL=INFO
LLM_CRITIQUE_LOG_FORMAT=json

# Resource Limits
LLM_CRITIQUE_MAX_INPUT_TOKENS=8000
LLM_CRITIQUE_MAX_OUTPUT_TOKENS=2000
LLM_CRITIQUE_MAX_COST_PER_REQUEST=1.0
LLM_CRITIQUE_MAX_FILE_SIZE_MB=10

# API Configuration
LLM_CRITIQUE_API_TIMEOUT=120
LLM_CRITIQUE_MAX_RETRIES=3
LLM_CRITIQUE_RETRY_DELAY=1.0

# Rate Limiting
LLM_CRITIQUE_RATE_LIMIT_RPM=60

# Monitoring
LLM_CRITIQUE_ENABLE_METRICS=true
LLM_CRITIQUE_METRICS_PORT=8080
LLM_CRITIQUE_HEALTH_TIMEOUT=5.0

# Model Configuration
LLM_CRITIQUE_DEFAULT_MODELS=gpt-4o-mini,claude-3-haiku

# Security - Set these with your actual API keys
OPENAI_API_KEY=your-openai-key-here
ANTHROPIC_API_KEY=your-anthropic-key-here
GOOGLE_API_KEY=your-google-key-here
XAI_API_KEY=your-xai-key-here

# Optional: Custom configuration
# LLM_CRITIQUE_CONFIG_PATH=/app/config/custom.yaml 